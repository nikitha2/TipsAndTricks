<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonInflateLayoutDynamically"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inflate_layout_dynamically"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonRemoveObserverAfterResult"
        android:backgroundTint="@color/purple_900"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRemoveObserverAfterResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_observer_after_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonInflateLayoutDynamically"
        android:backgroundTint="@color/purple_900"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>